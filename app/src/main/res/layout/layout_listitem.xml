<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:id="@+id/parent_layout"
    android:background="@drawable/rounded_box"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:text="Datesdfsdfsdfsdfsdkfskdfsjsdfhsdfksdfjsdfhsdfksdfjsdfhsdfksdfjsdfhsdfksdfjsdfhsdfk"
        android:textSize="10dp"
        android:id="@+id/date"
        android:layout_centerHorizontal="true"
        android:paddingHorizontal="10dp"
        android:paddingTop="4dp"

        >
    </TextView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/date"
        android:text="big old didf dfjsdf sdfsdfsldfjsdfhsdf "
        android:id="@+id/thought"
        android:textSize="20dp"
        android:paddingHorizontal="10dp"
        android:paddingBottom="10dp"
        android:background="@null"
        android:textColor="@android:color/black"
        android:windowSoftInputMode="stateVisible"
        android:maxLines="1000"
        android:capitalize="sentences"
        android:inputType="textCapSentences|textMultiLine|textNoSuggestions"
        android:maxLength="2000"
        >
    </EditText>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_recycler"
        android:layout_below="@+id/thought"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_action_seach"
        />

</RelativeLayout>